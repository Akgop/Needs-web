	<section class="portfolio" id="portfolio">
		<div class="container" style="padding-top:100px">
			<!-- 자신이 쓴 글일 경우에만 수정 / 삭제 가능 -->
			<%
			if(board.id_nickName == user.id_nickName) {
			%>
				<pre class="pull-right">
				<a href="boardWrite?document_name=<%=board.document_name%>" style="color: #212529"> 수정 | </a><a href="boardDelete?document_name=<%=board.document_name%>&title=<%=board.title%>&content=<%=board.content%>" style="color: #212529">삭제 </a>
				</pre>
			<%
			}
			%>
            
			<table class="table table-bordered">
				<tbody>
					<tr>
						<td>제목</td> 
						<td><%=board.title%></td> 
					</tr>
					<tr>
						<td>작성자</td> 
						<td><%=board.id_nickName%></td> 
					</tr>
					<tr>
						<td>작성시간</td> 
						<td><%=board.day%></td> 
					</tr>
					<tr>
						<td>조회수</td>
						<td><%=board.visit_num%></td>
					</tr>
					<tr>
						<td>좋아요</td>
						<td><%=board.good_num%></td>
					</tr>
					<tr>
						<th>내용</th>
						<td class="form-control" style="min-height: 300px; width: 100%"><%=board.content%></td>
					</tr>
					<tr>
						<th>댓글</th>
						<td>
							<form name="form2" action="commentSave" method="post">
								<textarea name="contentReply" class="autosize" onkeydown="resize(this)" onkeyup="resize(this)"  placeholder="내용을 입력하세요. " class="form-control" style="width: 100%"></textarea>
								<input type="hidden" name="data_doc" value="<%=board.document_name%>" class="pull-right">
								<input type="hidden" name="writerReply" value="<%=user.id_nickName%>" class="pull-right">
								<input type="hidden" name="id_uid" value="<%=board.id_uid%>" class="pull-right">
								<input type="submit" value=등록 onClick="form2.submit()" class="pull-right">
							</form>
						</td>
					</tr>
				</tbody>
			</table>
            
			<!--  좋아요  -->
			<div style="float:right">
				<form name="form1" action="boardLike" method="post"> 
					<input type="button" value=" ❤ " onClick="form1.submit()"> 
					<input type="hidden" name="document_name" value="<%=board.document_name%>">    
					<input type="hidden" name="page" value="<%=page%>">
					<input type="hidden" name="id_nickName" value="<%=user.id_nickName%>">
					<input type="hidden" name="id_email" value="<%=user.id_email%>">
				</form>
			</div>
            
			<!--  목록  -->	
			<div style="float:right; margin-left: 10px">
				<form name="form3" action="boardList" method="get">
					<pre class="pull-right"><input type="submit" value="목록"></pre>               
					<input type="hidden" name="page" value="<%=page%>">
				</form>
			</div>
		</div>	
	</section>
		  
  <br><hr>       
    
	<div class="container" style="padding-top:100px">
    <!-- 댓글 읽기-->
   <caption><h3>댓글(<%=reply.length%>)</h3></caption><br>
        
		<%   
		if(reply.length != 0) {     // 댓글이 존재하면 댓글을 출력
		%>
		<%
		for(var i=0; i<reply.length; i++) {
		%>
		<!-- 자신이 쓴 댓글일 경우에만 수정 / 삭제 가능 -->
		<%
		if(reply[i].writerReply == user.id_nickName) {
		%>
				<pre><a href="commentEdit?data_doc=<%=board.document_name%>&reply_doc=<%=reply[i].reply_doc%>"> 수정 | </a><a href="commentDelete?data_doc=<%=board.document_name%>&reply_doc=<%=reply[i].reply_doc%>">삭제 </a></pre>
		<%
		}
		%>
    
			<table class="table table-bordered">
															
					<tbody>
					<tr>
							<td>이름</td>
							<td><%=reply[i].writerReply%></td>      
					</tr>
					<tr>
							<td>내용</td>
							<td><%=reply[i].contentReply%></td>      
					</tr>
					<tr>
							<td>작성시간</td>
							<td><%=reply[i].timeReply%></td>      
					</tr>
					</tbody>
					
			</table>
      <br>
				<%
				}
				%>
		<%
		}
		%>
	</div>
	<br><br>
		
	<script>
		function resize(obj) {
			obj.style.height = "1px";
			obj.style.height = (12+obj.scrollHeight)+"px";
		}
	</script>

